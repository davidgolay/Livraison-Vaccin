<Window x:Class="LivraisonCoteDorGolay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LivraisonCoteDorGolay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="8*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Loaded city set preview" VerticalAlignment="Bottom" />
        <TextBox Grid.Row="1" x:Name="filePreview" Margin="0,10"/>
        <Button Grid.Row="2" Content="Import a city set" Click="OnAddFile"/>

    </Grid>
</Window>
